<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <View
        android:id="@+id/squareView"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:background="@color/hour_view_left_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hourTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:00 AM"
        android:textColor="@color/hour_view_text_color"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/squareView"
        app:layout_constraintStart_toStartOf="@+id/squareView"

        app:layout_constraintTop_toTopOf="@+id/squareView" />

    <TextView
        android:id="@+id/meeting_text"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="65dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:gravity="left"
        android:text=""
        android:textSize="14sp"
        android:textColor="@color/meeting_title_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/squareView"
        app:layout_constraintTop_toTopOf="@+id/squareView" />
</androidx.constraintlayout.widget.ConstraintLayout>